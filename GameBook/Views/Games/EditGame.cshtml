@model GameViewModel

<!-- Google Font: Source Sans Pro -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome -->
<link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
<!-- Theme style -->
<link rel="stylesheet" href="../../dist/css/adminlte.min.css">

<section class="content" style="margin-top: 80px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">@Translate["EditingGame"]</h3>
                    </div>
                    <form asp-action="Edit" asp-controller="Games" method="post">
                        <div class="card-body">
                            <input type="hidden" asp-for="@Model.Id" value="@Model.Id">
                            <div class="form-group">
                                <label>@Translate["GameName"]</label>
                                <input type="text" class="form-control" placeholder="@Translate["GameName"]" asp-for="Name" value="@Model.Name">
                            </div>
                            <div class="form-group">
                                <label>@Translate["AchievedTrophies"]</label>
                                <input type="text" class="form-control" placeholder="@Translate["AchievedTrophies"]" asp-for="Trophies" value="@Model.Trophies">
                            </div>
                            <div class="form-group">
                                <label>@Translate["Trophies"]</label>
                                <input type="text" class="form-control" placeholder="@Translate["Trophies"]" asp-for="MaxTrophies" value="@Model.MaxTrophies">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-secondary">@Translate["SaveChanges"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- jQuery -->
<script src="../../plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- bs-custom-file-input -->
<script src="../../plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
<script src="../../dist/js/demo.js"></script>
